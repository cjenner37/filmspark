<%= form_with model: @review do |f| %>
	<div class="input-field">
		<%= f.label :stars %><br>
		<%= f.number_field :stars %>
	</div>
	<div class="input-field">
		<%= f.label :content %><br>
		<%= f.text_area :content, class: "materialize-textarea", "data-length": "200" %>
	</div>
	<div class="input-field">
		<%= f.hidden_field :movie_id, value: @movie.id %>
		<%= f.submit "Submit Review", class: "btn" %>
	</div>
<% end %>