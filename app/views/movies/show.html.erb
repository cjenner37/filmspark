<h1><%= @movie.name %></h1>
<h3>Created by: <%= User.find(@movie.user_id).full_name %></h3>
<p>Genre: <%= @movie.genre %></p>
<p>Location Filmed: <%= @movie.location_filmed %></p>
<p>Length: <%= @movie.length %> seconds</p>

<h5>Have you watched this movie?</h5>

<%= form_with model: @review, local: true do |f| %>
	<div class="input-field">
		<%= f.label :stars %><br>
		<%= f.number_field :stars %>
	</div>
	<div class="input-field">
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</div>
	<div class="input-field">
		<%= f.submit %>
	</div>
<% end %>