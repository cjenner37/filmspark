<!DOCTYPE html>
<html>
  <head>
    <title>MovieReviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navbar -->
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper purple darken-1">
          <%= link_to "Filmspark", root_path, class: "brand-logo center deep-purple-text text-lighten-4" %>
          <ul class="left hide-on-med-and-down">
            <li><%= link_to "Creators", creators_index_path %></li>
            <li><%= link_to "Movies", movies_path %></li>
            <li><%= link_to "About", about_index_path %></li>
          </ul>
          <ul class="right hide-on-med-and-down">

            <% if user_signed_in? %>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Log in", new_user_session_path %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path %>
              </li>
            <% end %>

          </ul>
        </div>
      </nav>
    </div> 

    <div class="container">
  		<p class="notice"><%= notice %></p>
  		<p class="alert"><%= alert %></p>
  		<%= yield %>
    </div>
  </body>
</html>
